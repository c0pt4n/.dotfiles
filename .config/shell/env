#!/bin/sh

# Default programs:
export BROWSER="zen-browser"
export TERMINAL="foot"
export EDITOR="nvim"
export VISUAL="nvim"

# ~/ Clean-up:
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"
export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export GOPATH="$XDG_DATA_HOME/go"
export CUDA_CACHE_PATH="$XDG_CACHE_HOME"/nv
export HISTFILE="$XDG_STATE_HOME/history"
export LESSHISTFILE="$XDG_STATE_HOME/less_history"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc-2.0"
export ANDROID_HOME="$XDG_DATA_HOME/android/sdk"
export ANDROID_USER_HOME="$ANDROID_HOME/user"
export ANDROID_AVD_HOME="$ANDROID_USER_HOME/avd"
export ADB_VENDOR_KEYS="$ANDROID_HOME/adbkeys"
export _Z_DATA="$XDG_STATE_HOME/zdata"
export SQLITE_HISTORY="$XDG_STATE_HOME/sqlite_history"
export TMUX_TMPDIR="${XDG_RUNTIME_DIR:-$XDG_CACHE_HOME/tmux}"
export WINEPREFIX="$XDG_DATA_HOME/wineprefixes/default"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
export W3M_DIR="$XDG_CONFIG_HOME/w3m"
export MBSYNCRC="$XDG_CONFIG_HOME/isyncrc"
export NNN_FIFO="/tmp/nnn.fifo"
export NNN_PLUG="p:preview-tui;e:suedit"
export NNN_TERMINAL="$TERMINAL"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/config"
export NPM_CONFIG_PREFIX="$XDG_DATA_HOME/npm"
export NPM_CONFIG_CACHE="$XDG_CACHE_HOME/npm"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export PYTHONUSERBASE="$XDG_DATA_HOME/python"
export PYTHON_HISTORY="$XDG_STATE_HOME/python_history"
export PYTHONPYCACHEPREFIX="$XDG_CACHE_HOME/python"
export IPYTHONDIR="$XDG_CONFIG_HOME/ipython"
export ZK_NOTEBOOK_DIR="$HOME/docs/notes"
export TEXMFHOME="$XDG_DATA_HOME/texmf"
export TEXMFVAR="$XDG_CACHE_HOME/texlive/texmf-var"
export TEXMFCONFIG="$XDG_CONFIG_HOME/texlive/texmf-config"
export _JAVA_OPTIONS="-Djava.util.prefs.userRoot=$XDG_CONFIG_HOME/java"

[ -d "$XDG_STATE_HOME/nix/profile/share/wordlists" ] && export SEC="$XDG_STATE_HOME/nix/profile/share/wordlists"

export PATH="$GOPATH/bin:$HOME/.local/bin:$HOME/.dotnet/tools:${PATH:-}"
export PATH="$PATH:$ANDROID_HOME/platform-tools"
export PATH="$PATH:$ANDROID_HOME/cmdline-tools/latest/bin"
export PATH="$PATH:$ANDROID_HOME/emulator"

[ -d "$XDG_STATE_HOME/nix/profile/bin" ] &&
	export PATH="$XDG_STATE_HOME/nix/profile/bin:${PATH:-}" &&
	export XDG_DATA_DIRS="$XDG_STATE_HOME/nix/profile/share:$XDG_DATA_DIRS"

# Other program settings:
export SSH_ASKPASS="fuzzel-ssh-askpass":
export SUDO_ASKPASS="fuzzel-ssh-askpass"

export SVHOME_USER="$XDG_CONFIG_HOME/runit/sv"
export SVDIR_USER="$XDG_DATA_HOME/services"
[ -n "$XDG_RUNTIME_DIR" ] &&
	export DOCKER_HOST="unix://$XDG_RUNTIME_DIR/podman/podman.sock"

export LESS="-R"
export MANPAGER="less -R --use-color -Dd+b -Duc"
export MANROFFOPT="-P -c"
export FZF_DEFAULT_OPTS="--layout=reverse --height=~40%"
export FZF_DEFAULT_COMMAND="fd --type f --hidden --strip-cwd-prefix"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export PASSWORD_STORE_GPG_OPTS="--no-throw-keyids"
