set shell "sh"
set shellopts "-eu"
set ifs "\n"
set icons
set period 1
set scrolloff 10
set autoquit true
set previewer "~/.config/lf/previewer"

cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf -- $fx
}}

map D delete
