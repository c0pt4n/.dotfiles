set shell "sh"
set shellopts "-eu"
set ifs "\n"
set icons
set period 1
set scrolloff 10
set cursorpreviewfmt "\033[7;2m"
set autoquit true
set cleaner "~/.config/lf/cleaner"
set previewer "~/.config/lf/previewer"

cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf -- $fx
}}

map H set hidden!
map <enter> shell
map <esc> !true

map x $$f
map X !$f

cmd open &open $f
map o open $f

map D delete
map <delete> delete

cmd q quit
